<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/add" method="POST">
						<div class="form-group m-2">
							<input type="text" class="form-control" name="title" placeholder="Title" autofocus required>
						</div>
						<div class="form-group m-2">
							<input type="url" class="form-control" name="url" placeholder="URL" required>
						</div>
						<div class="form-group m-2">
							<textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
						</div>
						<div class="form-group m-2 d-grid gap-2">
							<button class="btn btn-primary d-block">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>